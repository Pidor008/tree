{
  "name": "C Development Environment",
  "image": "mcr.microsoft.com/devcontainers/cpp:debian", 

  // VS Code settings for this container
  "settings": {
    "github.copilot.enable": {
      "*": false
    },
    "editor.tabSize": 4,
    "editor.formatOnSave": true
  },

  // Install GCC and make (Debian stable packages, fixed versions)
  "postCreateCommand": "apt-get update && apt-get install -y gcc make && apt-get clean && rm -rf /var/lib/apt/lists/*",

  // Extensions to install automatically
  "extensions": [
    "ms-vscode.cpptools"
  ]
}
